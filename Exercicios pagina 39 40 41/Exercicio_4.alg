inicio	
    variavel inteiro num
    escrever "Informe um Número : "
    ler num
    se (num % 2 = 0) entao
        Escrever "Número informado é par !\n"
    senao
        escrever "Número informado é impar !\n"
    fimse
    se (num >= 0) entao
        escrever "Número informado é positivo !"
    senao
        escrever "Número informado é negativo !"
    fimse
fim
